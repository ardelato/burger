<h2>List of Burgers</h2>

<h3>Burgers to Eat</h3>
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>{{id}} {{burger_name}}<button data-burgerID={{id}} class="eat_burger">Eat Burger</button></li>
    {{/unless}}
    {{/each}}
</ul>

<h3>Eaten Burgers</h3>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>{{id}} {{burger_name}}</li>
    {{/if}}
    {{/each}}
</ul>
<h2>Add a Burger</h2>
<form class="create-form">
    <textarea type="text" name="burger"></textarea>
    <button type="submit">Add Burger</button>
</form>